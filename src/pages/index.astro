---
import Bio from "@/data/bio.md";

import { dates } from "@/data/liveDates.json";
import LiveDate from "@/components/LiveDate.vue";

import ImageGrid from '@/components/imageComponents/ImageGrid.astro';
import mainGrid from '@/data/imageData/main-grid.json';

import soundcloudData from "@/data/soundcloud.json";
import SoundcloudEmbed from "@/components/SoundcloudEmbed.astro";
import youtubeData from "@/data/videos.json";
import YTEmbed from "@/components/YTEmbed.astro";
import Header from "@/components/Header.astro";
import Toaster from '@/components/ui/toast/Toaster.vue'
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Alou String Quartet" class="font-serif m-auto">
  <Header />

  <section id="quartet" class="bg-background1 bg-cover py-12 px-6 md:px-12">
    <div class="font-serif max-w-prose text-center md:px-12 m-auto">
      <Bio />
    </div>
  </section>
  <section class="bg-background2 bg-cover p-4 md:p-12 py-12" id="termine">
    <h2 class="my-6 md:mx-6 border-black">Termine</h2>
    <ul class="max-w-md lg:my-16 m-auto">
      {dates.map((d) => <LiveDate data={d} />)}
    </ul>
  </section>

  <!-- <ClImage -->
  <!--   class="w-full h-full object-[center_-100px] object-cover" -->
  <!--   id="Alou/qffr9tdkrgjdlrkh63xx" -->
  <!-- /> -->

  <section
    id="media"
    class="bg-background7 bg-cover p-4 md:p-12 py-12"
    id="termine"
  >
    <h2 class="text-white">Media</h2>
    <div
      class="flex flex-wrap w-full max-w-xl lg:max-w-[unset] justify-center my-12 mx-auto"
    >
      {
        youtubeData.videos.map((v) => (
          <YTEmbed
            url={v.link}
            class="basis-full lg:basis-1/2 p-4 aspect-video"
          />
        ))
      }
    </div>

    <div class="mt-16 mb-8 max-w-screen-lg m-auto">
      {
        soundcloudData.soundcloud.map((s) => (
          <SoundcloudEmbed data={s} class="text-white m-8" />
        ))
      }
    </div>
  </section>
  <section id="media" class="bg-background1 bg-cover p-4 md:p-12 py-12">
		<ImageGrid images={mainGrid.images} />
  </section>
  <Toaster />
</BaseLayout>
